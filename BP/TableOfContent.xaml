<Window x:Class="BP.Window1"
        x:Name="inhalt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BP"
        mc:Ignorable="d"
        Title="Rejstřík" Height="600" Width="900" MinWidth="900" MinHeight="600">

    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <GroupBox BorderThickness="5" Margin="10">
            <UniformGrid x:Name="GB_databases" Columns="5">
            </UniformGrid>
        </GroupBox>
        <GroupBox Grid.Column="1" BorderThickness="2" Margin="10">
            <UniformGrid x:Name="GB_records" Columns="1">
            </UniformGrid>
        </GroupBox>
    </Grid>

</Window>
